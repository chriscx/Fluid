include admin.menu.jade

.row
  .col-md-12
    form.form
      .form-group
        label Edit Title
        input.form-control(ng-model='post.title' type='text')
      .form-group
        label Edit Tags (split by a comma)
        input.form-control(type='tags' placeholder='Tags' id='input_post_tags' ng-model='post.tags')
      .form-group
        label Edit Category
        input.form-control(type='category' placeholder='Category' ng-model='post.category')
      .form-group
        text-angular(rows='15' ng-model='post.body')
      .form-group
        .btn-toolbar
          button.btn.btn-success(type='button' ng-click='savePost(post)') Publish
          button.btn.btn-danger(type='button' ng-click='deletePost(post)') Delete
