include menu
.container
  .row
    .col-md-8.col-md-offset-2
      .row
        .col-md-12
          form.form
            .form-group
              label Website name
              input.form-control(ng-model='setting.name' type='text')
          form.form
            .form-group
              label Keywords
              input.form-control(ng-model='setting.keywords' type='text')
          //- form.form
          //-   .form-group
          //-     label Mailing info
          //-     input.form-control(ng-model='setting.keywords' type='text')
      .row
        .col-md-12
          form.form
            .form-group
              label New menu item
              input.form-control(ng-model='newItem.name' type='text')
            .form-group
              label
              input.form-control(ng-model='newItem.route' type='text')
            .form-group
              button.btn.btn-default(type='button' ng-click='createMenuItem(newItem)') Create
            .form-group
              label Select menu item
              select.form-control(ng-model='selectedItem' ng-options="item.name for item in menuList track by item.id | orderBy:'order'")
            .form-group
              label Edit name
              input.form-control(ng-model='selectedItem.name' type='text')
            .form-group
              label Edit order
              input.form-control(ng-model='selectedItem.order' type='text')
            .form-group
              label Edit route
              input.form-control(ng-model='selectedItem.route' type='text')
            .form-group
              button.btn.btn-default(type='button' ng-click='saveMenuItem(selectedItem)') Save
              button.btn.btn-default(type='button' ng-click='deleteMenuItem(selectedItem)') Delete
