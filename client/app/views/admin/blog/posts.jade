.container
  .row
    .col-md-8.col-md-offset-2
      .row
        .col-md-12
          .form-group
            .input-group
              input.form-control(ng-model='newPostTitle' type='text' id='input_add_post' placeholder='Add new post...')
              span.input-group-btn
                button.btn.btn-default(type='button' ng-click='addNewPost(newPostTitle)') Add
          .form-group
            label Select Post
            select.form-control(ng-model='selectedPost' ng-options='post.title for post in posts track by post.slug' id='select_post')
          .form-group
            label Edit Title
            input.form-control(type='text' placeholder='Title' id='input_post_title' ng-model='selectedPost.title')
            label Edit Tags
            input.form-control(type='tags' placeholder='Tags' id='input_post_tags' ng-model='SelectedPost.tags[0].name')
            label Select Category
            select.form-control(ng-model='selectedPostCategory' ng-options='category.name for category in categories track by category.name' id='select_post_category')
          .form-group
            label Edit Post
            textarea.form-control(rows='15' placeholder="Write your content here..." id='textarea_body_post' ng-model='selectedPost.body')
            button.btn.btn-default(type='button' ng-click='savePost(selectedPost)') Save
            button.btn.btn-default(type='button' ng-click='deletePost(selectedPost)') Delete
            button.btn.btn-default(type='button') Publish
