include ../menu
.container
  .row
    .col-md-8.col-md-offset-2
      .row
        .col-md-12
          legend Edit user information
          form(role='form', method="post", style='max-width: 300px;')
            .form-group
                input.form-control(type='text' name="username" ng-model='user.username')
            .form-group
                input.form-control(type='text' name="email" ng-model='user.email')
            .form-group
              input.form-control(type='password' name="password" placeholder='Password', ng-model='user.password')
            .form-group
              button.btn.btn-default(type='submit' ng-click='update(user)') Save
              a.btn.btn-primary(href='/') Cancel
