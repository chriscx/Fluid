include menu
.container
  .row
    h1 Forgot Password
    br
    form(role='form', method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='password', name="password", placeholder='Enter new password', ng-model='reset.password')
      .form-group
          input.form-control(type='password', name="passwordCheck", placeholder='Enter new password again', ng-model='reset.password')
      button.btn.btn-default(type='submit', ng-click='resetPassword(reset.password)') Submit
      a(href='/')
        button.btn.btn-primary(type="button") Cancel
