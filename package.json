    "connect-busboy": "0.0.2",
    "cookie-parser": "1.3.*",
    "express": "4.10.*",
    "express-jwt": "0.4.*",
    "express-session": "1.9.*",
    "forever": "0.10.*",
    "jade": "1.7.*",
    "jsonwebtoken": "1.1.*",
    "markdown": "0.5.*",
    "method-override": "2.3.*",
    "moment": "2.8.*",
    "mongoose": "3.8.*",
    "nodemailer": "1.3.*",
    "passport": "0.2.*",
    "passport-local": "1.0.*",
    "request": "2.45.*",
    "speakingurl": "*",
    "underscore": "1.7.*",
