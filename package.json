    "hashids": "^1.0.1",
    "nodemailer-smtp-transport": "^0.1.13"
  },
  "devDependencies": {
    "coffee-script": "1.8.*",
    "stylus": "0.49.*",
    "jasmine": "2.0.*",
    "mocha": "1.21.*",
    "request": "2.45.*",
    "should": "4.0.*",
    "grunt": "^0.4.5",
    "grunt-jade": "^0.5.1",
    "grunt-shell": "^1.1.1",
